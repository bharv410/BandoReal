<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
    package="com.bandotheapp.bando" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application tools:replace="android:theme,android:icon"
        android:name="com.bandotheapp.bando.MyApplication"
                 android:icon="@drawable/bandologo"
        android:allowBackup="true"
        android:logo="@drawable/bandoheader"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.bandotheapp.bando.MainActivity"
            android:logo="@drawable/bandoheader">
        </activity>
        <activity
            android:name="com.bandotheapp.bando.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:logo="@drawable/bandoheader">
        </activity>
        <activity
            android:name="com.bandotheapp.bando.LoadingScreen"
            android:label="@string/app_name" >
        </activity>
        <receiver
            android:name="com.bandotheapp.bando.editprefences.AlarmReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.bandotheapp.bando" >
                </action>
            </intent-filter>
        </receiver>
        <activity
            android:name="classes.TwitterWebView"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        </activity>
        <activity
            android:name="com.bandotheapp.bando.SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bandotheapp.bando.ArticleDetailActivity"
            android:label="@string/title_activity_article_detail"
            android:logo="@drawable/bandoheader">
        </activity>
        <activity
            android:name="com.bandotheapp.bando.EditFeedActivity"
            android:label="@string/title_activity_edit_feed"
            android:logo="@drawable/bandoheader">
        </activity>
        <activity
            android:name="com.bandotheapp.bando.editprefences.ChooseCategoriesActivity"
            android:label="@string/title_activity_choose_categories" >
        </activity>
    </application>
</manifest>
